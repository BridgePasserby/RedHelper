<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="confirmStyle">
        <item name="android:background">@drawable/selector_primary_btn</item>
        <item name="android:text">确定</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="roundConfirmStyle" parent="confirmStyle">
        <item name="android:background">@drawable/selector_primary_round_btn</item>
        <item name="android:textColor" >@color/text_color_white</item>
    </style>

    <style name="NoStateActionTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme" />

    <style name="LunchTheme" parent="NoStateActionTheme">
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>

    <style name="radioButtonStyle" parent="RadioButton" >
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
</resources>
